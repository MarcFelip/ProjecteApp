<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="125dp"
    android:background="@color/colorBeNote"
    android:orientation="vertical"
    android:padding="16dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img"
        android:layout_width="126dp"
        android:layout_height="85dp"
        android:layout_gravity="center"
        android:src="@drawable/avatar" />

    <TextView
        android:id="@+id/toolbar_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_toEndOf="@id/img"
        android:text="@string/header_text_user" />

    <TextView
        android:id="@+id/toolbar_Nombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar_username"
        android:layout_marginBottom="5dp"
        android:layout_toEndOf="@id/img"
        android:text="@string/header_text_nombre" />

    <TextView
        android:id="@+id/toolbar_estudio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar_Nombre"
        android:layout_marginBottom="5dp"
        android:layout_toEndOf="@id/img"
        android:text="@string/header_text_estudio" />

    <TextView
        android:id="@+id/toolbar_Correo"
        android:layout_width="265dp"
        android:layout_height="25dp"
        android:layout_below="@+id/toolbar_estudio"
        android:layout_marginStart="0dp"
        android:layout_toEndOf="@+id/img"
        android:text="Correo" />

</RelativeLayout>