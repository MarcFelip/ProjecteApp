<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e69f22"
    tools:context=".Registrar">

    <include
        android:id="@+id/registrar_toolbar"
        layout="@layout/toolbar_inicio" />


    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="351dp"
        android:layout_height="486dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/cuadrado_login" />

    <Button
        android:id="@+id/Registrar"
        android:layout_width="240dp"
        android:layout_height="53dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="488dp"
        android:background="@drawable/btn_iniciarsesion"
        android:text="@string/registrar_button_registrar"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/Registrar_password"
        android:layout_width="245dp"
        android:layout_height="60dp"
        android:layout_marginStart="83dp"
        android:layout_marginTop="272dp"
        android:layout_marginEnd="83dp"
        android:background="@drawable/btn_redondo_white"
        android:ems="10"
        android:hint="@string/registrar_hint_password"
        android:inputType="textPersonName"
        android:paddingStart="20dp"
        android:password="true"
        android:textColor="#FFFFFF"
        android:textColorHint="@android:color/darker_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="RtlSymmetry" />

    <EditText
        android:id="@+id/registrar_password_2"
        android:layout_width="245dp"
        android:layout_height="60dp"
        android:layout_marginStart="83dp"
        android:layout_marginTop="340dp"
        android:layout_marginEnd="83dp"
        android:background="@drawable/btn_redondo_white"
        android:ems="10"
        android:hint="@string/registrar_hint_password2"
        android:inputType="textPersonName"
        android:paddingStart="20dp"
        android:password="true"
        android:textColor="#FFFFFF"
        android:textColorHint="@android:color/darker_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="RtlSymmetry" />

    <TextView
        android:id="@+id/terminos"
        android:layout_width="202dp"
        android:layout_height="42dp"
        android:layout_marginStart="124dp"
        android:layout_marginTop="412dp"
        android:text="@string/registrar_text_aceptar_terminos"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/Registrar_checkBox"
        android:layout_width="31dp"
        android:layout_height="30dp"
        android:layout_marginTop="412dp"
        android:layout_marginEnd="292dp"
        android:buttonTint="@color/LOGOTIP_background"
        android:textColor="#FFFFFF"
        android:textColorHint="@color/LOGOTIP_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Registrar_LeerMas"
        android:layout_width="202dp"
        android:layout_height="42dp"
        android:layout_marginStart="124dp"
        android:layout_marginTop="412dp"
        android:text="                                        terminos y condiciones de uso"
        android:textColor="@color/Informacion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Button_Login"
        android:layout_width="140dp"
        android:layout_height="51dp"
        android:layout_marginTop="580dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/btn_registrar"
        android:text="@string/registrar_button_iniciar"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/Registrar_progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="183dp"
        android:layout_marginTop="235dp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Registrar_TextPregunta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="592dp"
        android:text="@string/registrar_text_pregunta"
        android:textColor="#000"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Registrar_TextRegistrate"
        android:layout_width="200dp"
        android:layout_height="54dp"
        android:layout_marginTop="85dp"
        android:text="@string/registrar_text_registrar"
        android:textAlignment="center"
        android:textColor="#FFF"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Registrar_TextCorreo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="80dp"
        android:text="@string/registrar_text_correo"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/Registarr_email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/Registrar_TextContraseÃ±a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:text="@string/registrar_text_contrsenya"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/Registrar_password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/Registarr_email"
        android:layout_width="245dp"
        android:layout_height="60dp"
        android:layout_marginStart="83dp"
        android:layout_marginTop="176dp"
        android:layout_marginEnd="83dp"
        android:background="@drawable/btn_redondo_white"
        android:ems="10"
        android:hint="@string/registrar_hint_email"
        android:inputType="textPersonName"
        android:paddingStart="20dp"
        android:textColor="#FFFFFF"
        android:textColorHint="@android:color/darker_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="RtlSymmetry,TextFields" />

    <TextView
        android:id="@+id/Salida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:textColor="@color/red"
        app:layout_constraintBottom_toTopOf="@+id/Registrar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>