<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Registrar">

    <include layout="@layout/toolbar_inicio"
        android:id="@+id/registrar_toolbar"
        />


    <ImageView
        android:id="@+id/imageFons"
        android:layout_width="601dp"
        android:layout_height="1480dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.419"
        app:srcCompat="@drawable/fonsp" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="351dp"
        android:layout_height="486dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/cuadrado_login" />

    <TextView
        android:id="@+id/Salida"
        android:layout_width="245dp"
        android:layout_height="60dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="444dp"
        android:gravity="center"
        android:textColor="@color/red"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Registrar"
        android:layout_width="240dp"
        android:layout_height="53dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="488dp"
        android:background="@drawable/btn_iniciarsesion"
        android:text="Regístrate"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/Registrar_password"
        android:layout_width="245dp"
        android:layout_height="60dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="272dp"
        android:background="@drawable/btn_redondo_white"
        android:ems="10"
        android:hint="Contraseña"
        android:inputType="textPersonName"
        android:paddingLeft="20dp"
        android:password="true"
        android:textColor="#FFFFFF"
        android:textColorHint="@android:color/darker_gray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/registrar_password_2"
        android:layout_width="245dp"
        android:layout_height="60dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="344dp"
        android:background="@drawable/btn_redondo_white"
        android:ems="10"
        android:hint="Repita contraseña"
        android:inputType="textPersonName"
        android:paddingLeft="20dp"
        android:password="true"
        android:textColor="#FFFFFF"
        android:textColorHint="@android:color/darker_gray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/terminos"
        android:layout_width="201dp"
        android:layout_height="38dp"
        android:layout_marginTop="16dp"
        android:text="He leído y acepto los términos y condiciones de uso"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.628"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registrar_password_2" />

    <CheckBox
        android:id="@+id/Registrar_checkBox"
        android:layout_width="35dp"
        android:layout_height="33dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="408dp"
        android:buttonTint="@color/LOGOTIP_background"
        android:textColor="#FFFFFF"
        android:textColorHint="@color/LOGOTIP_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Registrar_LeerMas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Leer mas"
        android:textColor="@color/Informacion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.375"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/terminos" />

    <Button
        android:id="@+id/Button_Login"
        android:layout_width="140dp"
        android:layout_height="51dp"
        android:layout_marginTop="580dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/btn_registrar"
        android:text="Iniciar sesión"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/Registrar_progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.486" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="592dp"
        android:text="¿Ya tienes cuenta?"
        android:textColor="#000"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="200dp"
        android:layout_height="54dp"
        android:layout_marginTop="76dp"
        android:text="Regístrate"
        android:textAlignment="center"
        android:textColor="#FFF"
        android:textSize="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Registrar_TextCorreo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="88dp"
        android:layout_marginTop="80dp"
        android:text="Correo"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/Registarr_email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/Registrar_TextContraseña"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="88dp"
        android:text="Contraseña"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/Registrar_password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/Registarr_email"
        android:layout_width="245dp"
        android:layout_height="60dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="176dp"
        android:background="@drawable/btn_redondo_white"
        android:ems="10"
        android:hint="ejemplo@gmail.com"
        android:inputType="textPersonName"
        android:paddingLeft="20dp"
        android:textColor="#FFFFFF"
        android:textColorHint="@android:color/darker_gray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>